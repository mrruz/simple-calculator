        <Button x:Name="btnAdd" Content="+" HorizontalAlignment="Left" Margin="83,120,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="BtnAdd_Click"/>
        <Button x:Name="btnSubtract" Content="-" HorizontalAlignment="Left" Margin="123,120,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="BtnSubtract_Click"/>
        <Button x:Name="Enter" Content="Enter" HorizontalAlignment="Left" Margin="83,160,0,0" VerticalAlignment="Top" Width="80" Height="40    " Click="Enter_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="3,160,0,0" VerticalAlignment="Top" Width="80" Height="40    " Click="Btn_Clear_Click"/>
        <TextBox x:Name="TextBoxField" HorizontalAlignment="Left" Height="23" Margin="0,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169"/>

    </Grid>
</Window>
