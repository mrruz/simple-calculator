<Window x:Class="SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="236.638" Width="176.901">
    <Grid>
        <Button x:Name="_0" Content="0" HorizontalAlignment="Left" Margin="3,40,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_0_Click"/>
        <Button x:Name="_1" Content="1" HorizontalAlignment="Left" Margin="43,40,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_1_Click"/>
        <Button x:Name="_2" Content="2" HorizontalAlignment="Left" Margin="83,40,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_2_Click"/>
        <Button x:Name="_3" Content="3" HorizontalAlignment="Left" Margin="123,40,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_3_Click"/>
        <Button x:Name="_4" Content="4" HorizontalAlignment="Left" Margin="3,80,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_4_Click"/>
        <Button x:Name="_5" Content="5" HorizontalAlignment="Left" Margin="43,80,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_5_Click"/>
        <Button x:Name="_6" Content="6" HorizontalAlignment="Left" Margin="83,80,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_6_Click"/>
        <Button x:Name="_7" Content="7" HorizontalAlignment="Left" Margin="123,80,0,0" VerticalAlignment="Top" Width="40    " Height="40    " Click="_7_Click"/>
